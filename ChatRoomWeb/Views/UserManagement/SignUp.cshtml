@model ChatRoomWeb.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
}

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-5">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            @using (Html.BeginForm("SignUpPost", "UserManagement", FormMethod.Post))
            {
            <div class="row">
                <div class="mb-4">

                  <div class="form-outline">
                     @Html.TextBoxFor(m => m.Username, new { @class="form-control form-control-lg", type="text", required = "required"})
                    <label class="form-label">Username</label>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="mb-4 pb-2">

                  <div class="form-outline">
                    @Html.TextBoxFor(m => m.Email, new { @class="form-control form-control-lg", type="email", required = "required"})
                    <label class="form-label">Email</label>
                  </div>

                </div>
                
              </div>

              <div class="row">
                <div class="mb-4 pb-2">

                  <div class="form-outline">
                      @Html.TextBoxFor(m => m.Password, new { @class="form-control form-control-lg", type="password", required = "required"})
                    <label class="form-label">Password</label>
                  </div>

                </div>
                
              </div>

              <div class="row">
                <div class="mb-4 pb-2">

                  <div class="form-outline">
                      @Html.TextBoxFor(m => m.ConfirmPassword, new { @class="form-control form-control-lg", type="password", required = "required"})
                    <label class="form-label">Confirm Password</label>
                  </div>

                </div>
                
              </div>

              <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
              </div>

              }
          </div>
                    <a class="btn btn-dark btn-lg" asp-area="" asp-controller="UserManagement" asp-action="Index">I have an account</a>
        </div>
       </div>
    </div>
  </div>
</section>

